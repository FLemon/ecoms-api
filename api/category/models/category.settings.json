{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "name": "category",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name_cn": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true
    },
    "products": {
      "via": "category",
      "collection": "product"
    },
    "description": {
      "type": "richtext"
    },
    "order": {
      "type": "integer"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
