{
  "kind": "collectionType",
  "collectionName": "product_variants",
  "info": {
    "name": "ProductVariant",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "slug": {
      "type": "uid"
    },
    "product": {
      "model": "product",
      "via": "product_variants"
    },
    "variants": {
      "collection": "variant"
    },
    "price_in_china": {
      "type": "decimal",
      "required": false
    },
    "stock": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "limited": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "price_in_uk": {
      "type": "decimal"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
