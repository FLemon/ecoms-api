{
  "kind": "collectionType",
  "collectionName": "product_variants",
  "info": {
    "name": "ProductVariant",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "slug": {
      "type": "uid"
    },
    "product": {
      "via": "product_variants",
      "model": "product"
    },
    "cyn_in_china": {
      "type": "decimal",
      "required": false
    },
    "limited_edition": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "cyn_in_uk": {
      "type": "decimal"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "gbp_in_china": {
      "type": "decimal"
    },
    "gbp_in_uk": {
      "type": "decimal"
    },
    "colour": {
      "model": "colour",
      "via": "product_variants"
    },
    "sizes": {
      "type": "component",
      "repeatable": true,
      "component": "variant-stock.size"
    },
    "description": {
      "type": "richtext"
    }
  }
}
